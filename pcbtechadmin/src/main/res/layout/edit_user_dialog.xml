<!-- edit_user_dialog.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/editkite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:foregroundGravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/kite"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Kite"
            android:foregroundGravity="top"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/editup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:foregroundGravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/app_icon"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Upstox"
            android:foregroundGravity="top"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/editang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:foregroundGravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_angel_advisory"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Angel One"
            android:foregroundGravity="top"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>

    <EditText
        android:id="@+id/newNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:paddingStart="10dp"
        android:minHeight="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_bg" />

    <EditText
        android:id="@+id/newEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:paddingStart="10dp"
        android:minHeight="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_bg" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:paddingStart="10dp"
        android:minHeight="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_bg" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingStart="10dp"
        android:minHeight="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_bg" />

    <EditText
        android:id="@+id/Access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Access"
        android:paddingStart="10dp"
        android:minHeight="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_bg" />




</LinearLayout>
